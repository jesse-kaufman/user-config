# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{js,json}]
indent_style = space
indent_size = 2

[{*.yml,*.yaml,.yamlfmt,yamlfmt}]
indent_style = space
indent_size = 4
max_line_length = 80

[*.md]
trim_trailing_whitespace = false

[{*.neon,*.neon.dist}]
indent_size = 4
indent_style = tab

[{*.lua,*.sh,.bashrc,*bashrc*,*.vim}]
indent_size = 4
indent_style = space
max_line_length = 80
